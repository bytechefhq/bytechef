{
  "display": {
    "description": "Reads and writes data from a JSON file.",
    "label": "JSON File"
  },
  "name": "jsonFile",
  "actions": [
    {
      "display": {
        "description": "Reads data from a JSON file.",
        "label": "Read from file"
      },
      "name": "read",
      "inputs": [
        {
          "description": "The file type to choose.",
          "label": "File Type",
          "name": "fileType",
          "type": "STRING",
          "required": true,
          "defaultValue": "JSON",
          "options": [
            {
              "name": "JSON",
              "value": "JSON"
            },
            {
              "name": "JSON Line",
              "value": "JSONL"
            }
          ]
        },
        {
          "description": "The object property which contains a reference to the JSON file to read from.",
          "label": "File",
          "name": "fileEntry",
          "type": "OBJECT",
          "required": true,
          "properties": [
            {
              "name": "extension",
              "type": "STRING",
              "required": true
            },
            {
              "name": "mimeType",
              "type": "STRING",
              "required": true
            },
            {
              "name": "name",
              "type": "STRING",
              "required": true
            },
            {
              "name": "url",
              "type": "STRING",
              "required": true
            }
          ]
        },
        {
          "description": "The object input is array?",
          "label": "Is Array",
          "name": "isArray",
          "type": "BOOLEAN",
          "defaultValue": true
        },
        {
          "label": "Options",
          "placeholder": "Add Option",
          "type": "OPTION",
          "options": [
            {
              "description": "The path where the array is e.g 'data'. Leave blank to use the top level object.",
              "displayOption": {
                "showWhen": {
                  "isArray": {
                    "values": [
                      true
                    ]
                  }
                }
              },
              "label": "Path",
              "name": "path",
              "type": "STRING"
            },
            {
              "description": "The amount of child elements to return in a page.",
              "displayOption": {
                "showWhen": {
                  "isArray": {
                    "values": [
                      true
                    ]
                  }
                }
              },
              "label": "Page Size",
              "name": "pageSize",
              "type": "INTEGER"
            },
            {
              "description": "The page number to get.",
              "displayOption": {
                "showWhen": {
                  "isArray": {
                    "values": [
                      true
                    ]
                  }
                }
              },
              "label": "Page Number",
              "name": "pageNumber",
              "type": "INTEGER"
            }
          ]
        }
      ],
      "outputSchema": [
        {
          "type": "ARRAY"
        },
        {
          "type": "OBJECT"
        }
      ]
    },
    {
      "display": {
        "description": "Writes the data to a JSON file.",
        "label": "Write to file"
      },
      "name": "write",
      "inputs": [
        {
          "description": "The file type to choose.",
          "label": "File Type",
          "name": "fileType",
          "type": "STRING",
          "required": true,
          "defaultValue": "JSON",
          "options": [
            {
              "name": "JSON",
              "value": "JSON"
            },
            {
              "name": "JSON Line",
              "value": "JSONL"
            }
          ]
        },
        {
          "description": "The data to write to the file.",
          "label": "Source",
          "name": "source",
          "type": "ANY",
          "required": true,
          "types": [
            {
              "type": "ARRAY"
            },
            {
              "type": "OBJECT"
            }
          ]
        },
        {
          "description": "Filename to set for binary data. By default, \"file.json\" will be used.",
          "label": "Filename",
          "name": "filename",
          "type": "STRING",
          "required": true,
          "defaultValue": "file.json"
        }
      ],
      "outputSchema": [
        {
          "type": "OBJECT",
          "properties": [
            {
              "name": "extension",
              "type": "STRING",
              "required": true
            },
            {
              "name": "mimeType",
              "type": "STRING",
              "required": true
            },
            {
              "name": "name",
              "type": "STRING",
              "required": true
            },
            {
              "name": "url",
              "type": "STRING",
              "required": true
            }
          ]
        }
      ]
    }
  ],
  "version": 1
}
