{
    "name": "@bytechef/automation-chat",
    "version": "0.1.0",
    "description": "ByteChef Automation Chat SDK - Embeddable chat widget for workflow automation",
    "type": "module",
    "scripts": {
        "build": "tsc && vite build",
        "lint": "eslint 'src/**/*.{ts,tsx}'",
        "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
        "format": "prettier --check .",
        "format:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\" && eslint src --max-warnings=0 --fix",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:watch": "vitest --watch",
        "coverage": "vitest run --coverage",
        "watch": "tsc && vite build --watch",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "publish:local": "npm publish --registry http://localhost:4873",
        "link:local": "npm link",
        "unlink:local": "npm unlink -g @bytechef/automation-chat"
    },
    "module": "./dist/index.js",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./dist/style.css": {
            "style": "./dist/style.css",
            "default": "./dist/style.css"
        },
        "./style.css": {
            "style": "./dist/style.css",
            "default": "./dist/style.css"
        }
    },
    "files": [
        "dist"
    ],
    "types": "./dist/index.d.ts",
    "peerDependencies": {
        "react": "^19.2.3",
        "react-dom": "^19.2.3"
    },
    "dependencies": {
        "@assistant-ui/react": "^0.11.53",
        "@assistant-ui/react-markdown": "^0.11.9",
        "@emotion/is-prop-valid": "^1.4.0",
        "@radix-ui/react-avatar": "^1.1.11",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-tooltip": "^1.2.8",
        "class-variance-authority": "^0.7.1",
        "lucide-react": "^0.562.0",
        "motion": "^12.25.0",
        "remark-gfm": "^4.0.1",
        "zustand": "^5.0.9"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "4.1.3",
        "@eslint/js": "9.21.0",
        "@storybook/react": "10.1.11",
        "@storybook/react-vite": "10.1.11",
        "@tailwindcss/vite": "4.1.18",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "16.2.0",
        "@types/node": "22.13.8",
        "@types/react": "19.1.6",
        "@types/react-dom": "19.1.6",
        "@vitejs/plugin-react": "5.1.2",
        "@vitest/coverage-v8": "4.0.16",
        "@vitest/ui": "4.0.16",
        "clsx": "^2.1.1",
        "eslint": "9.31.0",
        "eslint-config-prettier": "10.1.5",
        "eslint-plugin-react-hooks": "5.2.0",
        "eslint-plugin-react-refresh": "0.4.19",
        "eslint-plugin-storybook": "10.1.11",
        "glob": "13.0.0",
        "globals": "16.0.0",
        "jsdom": "26.0.0",
        "prettier": "3.5.2",
        "storybook": "^10.1.11",
        "tailwind-merge": "^3.4.0",
        "tailwindcss": "4.1.18",
        "tw-animate-css": "^1.4.0",
        "tw-shimmer": "^0.4.2",
        "typescript": "5.7.3",
        "typescript-eslint": "8.25.0",
        "vite": "^7.3.1",
        "vite-plugin-dts": "4.5.3",
        "vite-plugin-lib-inject-css": "2.2.1",
        "vitest": "4.0.16"
    },
    "author": "ByteChef <support@bytechef.io>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/bytechefhq/bytechef.git",
        "directory": "sdks/automation/chat/library"
    },
    "keywords": [
        "bytechef",
        "automation",
        "chat",
        "workflow",
        "react",
        "sdk",
        "ai",
        "assistant"
    ]
}
