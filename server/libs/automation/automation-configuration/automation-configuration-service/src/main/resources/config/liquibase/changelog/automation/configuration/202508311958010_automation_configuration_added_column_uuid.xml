<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">
    <changeSet id="20250831195810-1" author="Ivica Cardic">
        <addColumn tableName="project">
            <column name="uuid" type="${uuid_type}"/>
        </addColumn>
    </changeSet>

    <changeSet id="20250831195810-2" author="Ivica Cardic" dbms="postgresql">
        <sql>
            UPDATE project
            SET uuid = gen_random_uuid()
            WHERE uuid IS NULL;
        </sql>
    </changeSet>

    <changeSet id="20250831195810-3" author="Ivica Cardic">
        <addNotNullConstraint tableName="project" columnName="uuid"/>
        <addUniqueConstraint tableName="project" columnNames="uuid"/>
    </changeSet>
</databaseChangeLog>
