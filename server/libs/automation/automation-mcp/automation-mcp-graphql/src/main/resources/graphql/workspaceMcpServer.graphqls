extend type Query {
    mcpServersByWorkspace(workspaceId: ID!): [McpServer]
}

extend type Mutation {
    createMcpServerForWorkspace(input: CreateMcpServerForWorkspaceInput!): McpServer
    deleteMcpServerFromWorkspace(mcpServerId: ID!): Boolean
}

input CreateMcpServerForWorkspaceInput {
    name: String!
    type: ModeType!
    environmentId: ID!
    enabled: Boolean
    workspaceId: ID!
}
