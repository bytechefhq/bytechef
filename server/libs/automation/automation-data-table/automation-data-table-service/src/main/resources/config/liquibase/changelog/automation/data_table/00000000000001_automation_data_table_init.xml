<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="00000000000001" author="Ivica Cardic">
        <createTable tableName="data_table">
            <column name="id" type="BIGINT" autoIncrement="true" startWith="1050">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="data_table" columnNames="name" constraintName="uk_data_table_name"/>

        <createTable tableName="data_table_webhook">
            <column name="id" type="BIGINT" autoIncrement="true" startWith="1050">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="data_table_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="url" type="VARCHAR(2000)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="environment" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="data_table_webhook"
            baseColumnNames="data_table_id"
            constraintName="fk_data_table_webhook_data_table"
            referencedTableName="data_table"
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <addUniqueConstraint
            tableName="data_table_webhook"
            columnNames="data_table_id,type,url,environment"
            constraintName="uk_data_table_webhook"/>

        <createTable tableName="data_table_tag">
            <column name="data_table_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="data_table_tag" columnNames="data_table_id,tag_id"/>

        <addForeignKeyConstraint
            baseTableName="data_table_tag"
            baseColumnNames="data_table_id"
            constraintName="fk_data_table_tag_data_table"
            referencedTableName="data_table"
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <addForeignKeyConstraint
            baseTableName="data_table_tag"
            baseColumnNames="tag_id"
            constraintName="fk_data_table_tag_tag"
            referencedTableName="tag"
            referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
