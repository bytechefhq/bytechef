<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="00000000000001" author="Ivica Cardic">
        <createTable tableName="knowledge_base">
            <column name="id" type="BIGINT" autoIncrement="true" startWith="1050">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="max_chunk_size" type="INT" defaultValueNumeric="1024"/>
            <column name="min_chunk_size_chars" type="INT" defaultValueNumeric="1"/>
            <column name="overlap" type="INT" defaultValueNumeric="200"/>
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="knowledge_base" columnNames="name" constraintName="uk_knowledge_base_name"/>

        <createTable tableName="knowledge_base_document">
            <column name="id" type="BIGINT" autoIncrement="true" startWith="1050">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="knowledge_base_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="document" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="knowledge_base_document"
            baseColumnNames="knowledge_base_id"
            constraintName="fk_kb_document_kb"
            referencedTableName="knowledge_base"
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <createTable tableName="knowledge_base_document_chunk">
            <column name="id" type="BIGINT" autoIncrement="true" startWith="1050">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="knowledge_base_document_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="vector_store_id" type="VARCHAR(256)"/>
            <column name="content" type="TEXT"/>
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="knowledge_base_document_chunk"
            baseColumnNames="knowledge_base_document_id"
            constraintName="fk_kb_document_chunk_doc"
            referencedTableName="knowledge_base_document"
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <createTable tableName="knowledge_base_tag">
            <column name="knowledge_base_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="knowledge_base_tag" columnNames="knowledge_base_id,tag_id"/>

        <addForeignKeyConstraint
            baseTableName="knowledge_base_tag"
            baseColumnNames="knowledge_base_id"
            constraintName="fk_knowledge_base_tag_kb"
            referencedTableName="knowledge_base"
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <addForeignKeyConstraint
            baseTableName="knowledge_base_tag"
            baseColumnNames="tag_id"
            constraintName="fk_knowledge_base_tag_tag"
            referencedTableName="tag"
            referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="00000000000002" author="Ivica Cardic">
        <createTable tableName="workspace_knowledge_base">
            <column name="id" type="BIGINT" autoIncrement="true" startWith="1050">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="knowledge_base_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="workspace_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="workspace_knowledge_base"
            baseColumnNames="knowledge_base_id"
            constraintName="fk_workspace_knowledge_base_knowledge_base"
            referencedTableName="knowledge_base"
            referencedColumnNames="id"/>

        <addForeignKeyConstraint
            baseTableName="workspace_knowledge_base"
            baseColumnNames="workspace_id"
            constraintName="fk_workspace_knowledge_base_workspace"
            referencedTableName="workspace"
            referencedColumnNames="id"/>

        <addUniqueConstraint
            constraintName="uk_workspace_knowledge_base_workspace_kb"
            tableName="workspace_knowledge_base"
            columnNames="workspace_id,knowledge_base_id"/>
    </changeSet>

    <changeSet id="00000000000003" author="Ivica Cardic">
        <createTable tableName="knowledge_base_document_tag">
            <column name="knowledge_base_document_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="knowledge_base_document_tag" columnNames="knowledge_base_document_id,tag_id"/>

        <addForeignKeyConstraint
            baseTableName="knowledge_base_document_tag"
            baseColumnNames="knowledge_base_document_id"
            constraintName="fk_kb_document_tag_document"
            referencedTableName="knowledge_base_document"
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <addForeignKeyConstraint
            baseTableName="knowledge_base_document_tag"
            baseColumnNames="tag_id"
            constraintName="fk_kb_document_tag_tag"
            referencedTableName="tag"
            referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
