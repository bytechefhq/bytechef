extend type Query {
    apiKeys(environmentId: ID!, type: PlatformType!): [ApiKey]
    adminApiKeys(environmentId: ID!): [ApiKey]
    apiKey(id: ID!): ApiKey
}

extend type Mutation {
    createApiKey(name: String!, environmentId: ID!, type: PlatformType): String!
    deleteApiKey(id: ID!): Boolean!
    updateApiKey(id: ID!, name: String!): Boolean!
}

type ApiKey {
    id: ID
    name: String
    secretKey: String
    lastUsedDate: Long
    createdBy: String
    createdDate: Long
    lastModifiedBy: String
    lastModifiedDate: Long
}
