<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">
    <changeSet id="20250313170130-1" author="Ivica Cardic">
        <addColumn tableName="workflow_node_test_output">
            <column name="environment" type="INT"/>
        </addColumn>
    </changeSet>

    <changeSet id="20250313170130-2" author="Ivica Cardic" context="mono">
        <sql>
            UPDATE workflow_node_test_output
            SET environment = 0
            WHERE environment IS NULL;
        </sql>
    </changeSet>

    <changeSet id="20250313170130-3" author="Ivica Cardic">
        <addNotNullConstraint tableName="workflow_node_test_output" columnName="environment"/>
    </changeSet>
</databaseChangeLog>
