<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">
    <changeSet id="20240604153040-1" author="Ivica Cardic">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="user" columnName="uuid"/>
        </preConditions>

        <dropDefaultValue tableName="user" columnName="uuid"/>
    </changeSet>

    <changeSet id="20240604153040-2" author="Ivica Cardic">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="user" columnName="uuid"/>
            </not>
        </preConditions>

        <addColumn tableName="user">
            <column name="uuid" type="${uuid_type}">
                <constraints nullable="false" unique="true" />
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
