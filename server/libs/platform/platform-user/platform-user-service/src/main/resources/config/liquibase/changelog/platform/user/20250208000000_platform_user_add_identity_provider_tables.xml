<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">
    <changeSet id="20250208000000-1" author="Ivica Cardic">
        <createTable tableName="identity_provider">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(20)" defaultValue="OIDC">
                <constraints nullable="false"/>
            </column>
            <column name="issuer_uri" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="client_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="client_secret" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="scopes" type="VARCHAR(512)" defaultValue="openid,profile,email">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="auto_provision" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="default_authority" type="VARCHAR(50)" defaultValue="ROLE_USER">
                <constraints nullable="false"/>
            </column>
            <column name="enforced" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(50)"/>
            <column name="created_date" type="TIMESTAMP"/>
            <column name="last_modified_by" type="VARCHAR(50)"/>
            <column name="last_modified_date" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="20250208000000-2" author="Ivica Cardic">
        <createTable tableName="identity_provider_domain">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="identity_provider_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="domain" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="identity_provider_domain"
                                 baseColumnNames="identity_provider_id"
                                 constraintName="fk_identity_provider_domain_identity_provider"
                                 referencedTableName="identity_provider"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <createIndex indexName="ix_identity_provider_domain_domain"
                     tableName="identity_provider_domain"
                     unique="true">
            <column name="domain"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
