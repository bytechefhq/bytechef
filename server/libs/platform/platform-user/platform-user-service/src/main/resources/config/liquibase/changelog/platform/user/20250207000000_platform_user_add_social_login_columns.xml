<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">
    <changeSet id="20250207000000-1" author="Ivica Cardic">
        <addColumn tableName="user">
            <column name="auth_provider" type="VARCHAR(20)" defaultValue="LOCAL">
                <constraints nullable="false"/>
            </column>
            <column name="provider_id" type="VARCHAR(255)"/>
        </addColumn>
        <addUniqueConstraint tableName="user"
                             columnNames="auth_provider, provider_id"
                             constraintName="uk_user_auth_provider_provider_id"/>
    </changeSet>
</databaseChangeLog>
