<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- ce -->

    <!-- core -->
    <includeAll path="classpath:config/liquibase/changelog/core/" relativeToChangelogFile="false" errorIfMissingOrEmpty="false" contextFilter="mono or platform" />

    <!-- connection -->
    <includeAll path="classpath:config/liquibase/changelog/hermes/connection/" relativeToChangelogFile="false" errorIfMissingOrEmpty="false" contextFilter="mono or connection" />

    <!-- configuration -->
    <includeAll path="classpath:config/liquibase/changelog/atlas/configuration/" relativeToChangelogFile="false" errorIfMissingOrEmpty="false" contextFilter="mono or platform" />
    <includeAll path="classpath:config/liquibase/changelog/helios/configuration/" relativeToChangelogFile="false" errorIfMissingOrEmpty="false" contextFilter="mono or platform" />

    <!-- execution -->
    <includeAll path="classpath:config/liquibase/changelog/atlas/execution/" relativeToChangelogFile="false" errorIfMissingOrEmpty="false" contextFilter="mono or execution" />
    <includeAll path="classpath:config/liquibase/changelog/hermes/execution/" relativeToChangelogFile="false" errorIfMissingOrEmpty="false" contextFilter="mono or execution" />

    <!-- scheduler -->
    <includeAll path="classpath:config/liquibase/changelog/scheduler/" relativeToChangelogFile="false" errorIfMissingOrEmpty="false" contextFilter="mono or scheduler" />

    <!-- data storage -->
    <includeAll path="classpath:config/liquibase/changelog/hermes/data_storage" relativeToChangelogFile="false" errorIfMissingOrEmpty="false" contextFilter="mono or worker" />

    <!-- ee -->

    <!-- configuration -->
    <includeAll path="classpath:config/liquibase/changelog/dione/configuration/" relativeToChangelogFile="false" errorIfMissingOrEmpty="false" contextFilter="ee and (mono or platform)" />
</databaseChangeLog>
