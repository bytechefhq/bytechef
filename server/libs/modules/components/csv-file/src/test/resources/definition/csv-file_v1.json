{
  "display": {
    "description": "Reads and writes data from a csv file.",
    "label": "CSV File"
  },
  "name": "csvFile",
  "actions": [
    {
      "display": {
        "description": "Reads data from a csv file.",
        "label": "Read from file"
      },
      "name": "read",
      "inputs": [
        {
          "description": "The object property which contains a reference to the csv file to read from.",
          "label": "File",
          "name": "fileEntry",
          "type": "OBJECT",
          "required": true,
          "properties": [
            {
              "name": "extension",
              "type": "STRING",
              "required": true
            },
            {
              "name": "mimeType",
              "type": "STRING",
              "required": true
            },
            {
              "name": "name",
              "type": "STRING",
              "required": true
            },
            {
              "name": "url",
              "type": "STRING",
              "required": true
            }
          ]
        },
        {
          "label": "Options",
          "placeholder": "Add Option",
          "type": "OPTION",
          "options": [
            {
              "description": "Delimiter to use when reading a csv file.",
              "label": "Delimiter",
              "name": "delimiter",
              "type": "STRING",
              "defaultValue": ","
            },
            {
              "description": "The first row of the file contains the header names.",
              "label": "Header Row",
              "name": "headerRow",
              "type": "BOOLEAN",
              "defaultValue": true
            },
            {
              "description": "When reading from file the empty cells will be filled with an empty string.",
              "label": "Include Empty Cells",
              "name": "includeEmptyCells",
              "type": "BOOLEAN",
              "defaultValue": false
            },
            {
              "description": "The amount of child elements to return in a page.",
              "label": "Page Size",
              "name": "pageSize",
              "type": "INTEGER"
            },
            {
              "description": "The page number to get.",
              "label": "Page Number",
              "name": "pageNumber",
              "type": "INTEGER"
            },
            {
              "description": "In some cases and file formats, it is necessary to read data specifically as string, otherwise some special characters are interpreted the wrong way.",
              "label": "Read As String",
              "name": "readAsString",
              "type": "BOOLEAN",
              "defaultValue": false
            }
          ]
        }
      ],
      "outputSchema": [
        {
          "type": "ARRAY"
        }
      ]
    },
    {
      "display": {
        "description": "Writes the data to a csv file.",
        "label": "Write to file"
      },
      "name": "write",
      "inputs": [
        {
          "description": "The array of objects to write to the file.",
          "label": "Rows",
          "name": "rows",
          "type": "ARRAY",
          "required": true,
          "items": [
            {
              "type": "OBJECT",
              "additionalProperties": true,
              "properties": [
                {
                  "type": "BOOLEAN"
                },
                {
                  "type": "DATE_TIME"
                },
                {
                  "type": "NUMBER"
                },
                {
                  "type": "STRING"
                }
              ]
            }
          ]
        },
        {
          "label": "Options",
          "placeholder": "Add Option",
          "type": "OPTION",
          "options": [
            {
              "description": "Filename to set for binary data. By default, \"file.csv\" will be used.",
              "label": "Filename",
              "name": "filename",
              "type": "STRING",
              "defaultValue": ""
            }
          ]
        }
      ],
      "outputSchema": [
        {
          "type": "OBJECT",
          "properties": [
            {
              "name": "extension",
              "type": "STRING",
              "required": true
            },
            {
              "name": "mimeType",
              "type": "STRING",
              "required": true
            },
            {
              "name": "name",
              "type": "STRING",
              "required": true
            },
            {
              "name": "url",
              "type": "STRING",
              "required": true
            }
          ]
        }
      ]
    }
  ],
  "version": 1
}
