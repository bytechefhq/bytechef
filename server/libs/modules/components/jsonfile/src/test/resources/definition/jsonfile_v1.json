{
  "display": {
    "description": "Reads and writes data from a JSON file.",
    "label": "JSON File"
  },
  "name": "jsonFile",
  "actions": [
    {
      "display": {
        "description": "Reads data from a JSON file.",
        "label": "Read from file"
      },
      "name": "read",
      "output": [
        {
          "type": "ANY",
          "types": [
            {
              "displayOption": {
                "showWhen": {
                  "isArray": [
                    true
                  ]
                }
              },
              "type": "ARRAY"
            },
            {
              "displayOption": {
                "showWhen": {
                  "isArray": [
                    false
                  ]
                }
              },
              "type": "OBJECT"
            }
          ]
        }
      ],
      "properties": [
        {
          "description": "The file type to choose.",
          "label": "File Type",
          "name": "fileType",
          "required": true,
          "type": "STRING",
          "defaultValue": "JSON",
          "options": [
            {
              "name": "JSON",
              "value": "JSON"
            },
            {
              "name": "JSON Line",
              "value": "JSONL"
            }
          ]
        },
        {
          "description": "The object property which contains a reference to the JSON file to read from.",
          "label": "File",
          "name": "fileEntry",
          "required": true,
          "type": "OBJECT",
          "objectType": "FILE_ENTRY",
          "properties": [
            {
              "name": "extension",
              "required": true,
              "type": "STRING"
            },
            {
              "name": "mimeType",
              "required": true,
              "type": "STRING"
            },
            {
              "name": "name",
              "required": true,
              "type": "STRING"
            },
            {
              "name": "url",
              "required": true,
              "type": "STRING"
            }
          ]
        },
        {
          "description": "The object input is array?",
          "label": "Is Array",
          "name": "isArray",
          "type": "BOOLEAN",
          "defaultValue": true
        },
        {
          "description": "The path where the array is e.g 'data'. Leave blank to use the top level object.",
          "displayOption": {
            "showWhen": {
              "isArray": [
                true
              ]
            }
          },
          "label": "Path",
          "name": "path",
          "type": "STRING"
        },
        {
          "description": "The amount of child elements to return in a page.",
          "displayOption": {
            "showWhen": {
              "isArray": [
                true
              ]
            }
          },
          "label": "Page Size",
          "name": "pageSize",
          "type": "INTEGER"
        },
        {
          "description": "The page number to get.",
          "displayOption": {
            "showWhen": {
              "isArray": [
                true
              ]
            }
          },
          "label": "Page Number",
          "name": "pageNumber",
          "type": "INTEGER"
        }
      ]
    },
    {
      "display": {
        "description": "Writes the data to a JSON file.",
        "label": "Write to file"
      },
      "name": "write",
      "output": [
        {
          "type": "OBJECT",
          "objectType": "FILE_ENTRY",
          "properties": [
            {
              "name": "extension",
              "required": true,
              "type": "STRING"
            },
            {
              "name": "mimeType",
              "required": true,
              "type": "STRING"
            },
            {
              "name": "name",
              "required": true,
              "type": "STRING"
            },
            {
              "name": "url",
              "required": true,
              "type": "STRING"
            }
          ]
        }
      ],
      "properties": [
        {
          "description": "The file type to choose.",
          "label": "File Type",
          "name": "fileType",
          "required": true,
          "type": "STRING",
          "defaultValue": "JSON",
          "options": [
            {
              "name": "JSON",
              "value": "JSON"
            },
            {
              "name": "JSON Line",
              "value": "JSONL"
            }
          ]
        },
        {
          "description": "The data to write to the file.",
          "label": "Source",
          "name": "source",
          "required": true,
          "type": "ANY",
          "types": [
            {
              "type": "ARRAY"
            },
            {
              "type": "OBJECT"
            }
          ]
        },
        {
          "description": "Filename to set for binary data. By default, \"file.json\" will be used.",
          "label": "Filename",
          "name": "filename",
          "required": true,
          "type": "STRING",
          "defaultValue": "file.json"
        }
      ]
    }
  ],
  "version": 1
}
