{
  "actions": [ {
    "display": {
      "description": "Reads data from a JSON file.",
      "label": "Read from file"
    },
    "name": "read",
    "outputSchema": [ {
      "displayCondition": "isArray === true",
      "type": "ARRAY",
      "multipleValues": true,
      "controlType": "JSON_BUILDER"
    }, {
      "displayCondition": "isArray === false",
      "type": "OBJECT",
      "multipleValues": true,
      "controlType": "JSON_BUILDER"
    } ],
    "properties": [ {
      "description": "The file type to choose.",
      "label": "File Type",
      "required": true,
      "name": "fileType",
      "type": "STRING",
      "defaultValue": "JSON",
      "controlType": "SELECT",
      "options": [ {
        "name": "JSON",
        "value": "JSON"
      }, {
        "name": "JSON Line",
        "value": "JSONL"
      } ]
    }, {
      "description": "The object property which contains a reference to the JSON file to read from.",
      "label": "File",
      "required": true,
      "name": "fileEntry",
      "type": "OBJECT",
      "multipleValues": true,
      "objectType": "FILE_ENTRY",
      "properties": [ {
        "required": true,
        "name": "extension",
        "type": "STRING",
        "controlType": "INPUT_TEXT"
      }, {
        "required": true,
        "name": "mimeType",
        "type": "STRING",
        "controlType": "INPUT_TEXT"
      }, {
        "required": true,
        "name": "name",
        "type": "STRING",
        "controlType": "INPUT_TEXT"
      }, {
        "required": true,
        "name": "url",
        "type": "STRING",
        "controlType": "INPUT_TEXT"
      } ],
      "controlType": "INPUT_TEXT"
    }, {
      "description": "The object input is array?",
      "label": "Is Array",
      "name": "isArray",
      "type": "BOOLEAN",
      "defaultValue": true,
      "controlType": "CHECKBOX"
    }, {
      "advancedOption": true,
      "description": "The path where the array is e.g 'data'. Leave blank to use the top level object.",
      "displayCondition": "isArray === true",
      "label": "Path",
      "name": "path",
      "type": "STRING",
      "controlType": "INPUT_TEXT"
    }, {
      "advancedOption": true,
      "description": "The amount of child elements to return in a page.",
      "displayCondition": "isArray === true",
      "label": "Page Size",
      "name": "pageSize",
      "type": "INTEGER",
      "controlType": "INPUT_INTEGER"
    }, {
      "advancedOption": true,
      "description": "The page number to get.",
      "displayCondition": "isArray === true",
      "label": "Page Number",
      "name": "pageNumber",
      "type": "INTEGER",
      "controlType": "INPUT_INTEGER"
    } ]
  }, {
    "display": {
      "description": "Writes the data to a JSON file.",
      "label": "Write to file"
    },
    "name": "write",
    "outputSchema": [ {
      "type": "OBJECT",
      "multipleValues": true,
      "objectType": "FILE_ENTRY",
      "properties": [ {
        "required": true,
        "name": "extension",
        "type": "STRING",
        "controlType": "INPUT_TEXT"
      }, {
        "required": true,
        "name": "mimeType",
        "type": "STRING",
        "controlType": "INPUT_TEXT"
      }, {
        "required": true,
        "name": "name",
        "type": "STRING",
        "controlType": "INPUT_TEXT"
      }, {
        "required": true,
        "name": "url",
        "type": "STRING",
        "controlType": "INPUT_TEXT"
      } ],
      "controlType": "INPUT_TEXT"
    } ],
    "properties": [ {
      "description": "The file type to choose.",
      "label": "File Type",
      "required": true,
      "name": "fileType",
      "type": "STRING",
      "defaultValue": "JSON",
      "controlType": "SELECT",
      "options": [ {
        "name": "JSON",
        "value": "JSON"
      }, {
        "name": "JSON Line",
        "value": "JSONL"
      } ]
    }, {
      "description": "The data to write to the file.",
      "label": "Source",
      "required": true,
      "name": "source",
      "type": "ONE_OF",
      "types": [ {
        "type": "ARRAY",
        "multipleValues": true,
        "controlType": "JSON_BUILDER"
      }, {
        "type": "OBJECT",
        "multipleValues": true,
        "controlType": "JSON_BUILDER"
      } ]
    }, {
      "advancedOption": true,
      "description": "Filename to set for binary data. By default, \"file.json\" will be used.",
      "label": "Filename",
      "required": true,
      "name": "filename",
      "type": "STRING",
      "defaultValue": "file.json",
      "controlType": "INPUT_TEXT"
    } ]
  } ],
  "display": {
    "description": "Reads and writes data from a JSON file.",
    "label": "JSON File"
  },
  "name": "jsonFile",
  "version": 1
}