{
  "display": {
    "description": "Reads or writes a binary file from/to disk",
    "label": "Local File"
  },
  "name": "filesystem",
  "actions": [
    {
      "display": {
        "label": "Read from file"
      },
      "name": "readFile",
      "output": [
        {
          "type": "OBJECT",
          "objectType": "FILE_ENTRY",
          "properties": [
            {
              "name": "extension",
              "required": true,
              "type": "STRING"
            },
            {
              "name": "mimeType",
              "required": true,
              "type": "STRING"
            },
            {
              "name": "name",
              "required": true,
              "type": "STRING"
            },
            {
              "name": "url",
              "required": true,
              "type": "STRING"
            }
          ]
        }
      ],
      "properties": [
        {
          "description": "The path of the file to read.",
          "label": "Filename",
          "name": "filename",
          "placeholder": "/data/your_file.pdf",
          "required": true,
          "type": "STRING"
        }
      ]
    },
    {
      "display": {
        "label": "Write to file"
      },
      "name": "writeFile",
      "output": [
        {
          "type": "OBJECT",
          "properties": [
            {
              "name": "bytes",
              "type": "INTEGER"
            }
          ]
        }
      ],
      "properties": [
        {
          "description": "The object property which contains a reference to the file to be written.",
          "label": "File",
          "name": "fileEntry",
          "required": true,
          "type": "OBJECT",
          "objectType": "FILE_ENTRY",
          "properties": [
            {
              "name": "extension",
              "required": true,
              "type": "STRING"
            },
            {
              "name": "mimeType",
              "required": true,
              "type": "STRING"
            },
            {
              "name": "name",
              "required": true,
              "type": "STRING"
            },
            {
              "name": "url",
              "required": true,
              "type": "STRING"
            }
          ]
        },
        {
          "description": "The path to which the file should be written.",
          "label": "Filename",
          "name": "filename",
          "placeholder": "/data/your_file.pdf",
          "required": true,
          "type": "STRING"
        }
      ]
    },
    {
      "display": {
        "description": "Creates a temporary directory oon the filesystem.",
        "label": "Create Temp Directory"
      },
      "name": "createTempDir"
    },
    {
      "display": {
        "description": "Gets the full path from a full filename, which is the prefix + path, and also excluding the final directory separator.",
        "label": "File Path"
      },
      "exampleOutput": "/data",
      "name": "getFilePath",
      "output": [
        {
          "type": "STRING"
        }
      ],
      "properties": [
        {
          "description": "The path to full filename.",
          "label": "Filename",
          "name": "filename",
          "placeholder": "/data/your_file.pdf",
          "required": true,
          "type": "STRING"
        }
      ]
    },
    {
      "display": {
        "description": "Lists a content of directory for the given path.",
        "label": "List"
      },
      "name": "ls"
    },
    {
      "display": {
        "description": "Creates a directory.",
        "label": "Create"
      },
      "name": "mkdir"
    },
    {
      "display": {
        "description": "Removes the content of a directory.",
        "label": "Remove"
      },
      "name": "rm"
    }
  ],
  "version": 1
}
