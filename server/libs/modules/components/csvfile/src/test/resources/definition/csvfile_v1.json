{
    "actions": [
        {
            "display": {
                "description": "Reads data from a csv file.",
                "label": "Read from file"
            },
            "name": "read",
            "outputSchema": [
                {
                    "type": "ARRAY"
                }
            ],
            "properties": [
                {
                    "description": "The object property which contains a reference to the csv file to read from.",
                    "label": "File",
                    "required": true,
                    "name": "fileEntry",
                    "type": "OBJECT",
                    "objectType": "FILE_ENTRY",
                    "properties": [
                        {
                            "required": true,
                            "name": "extension",
                            "type": "STRING"
                        },
                        {
                            "required": true,
                            "name": "mimeType",
                            "type": "STRING"
                        },
                        {
                            "required": true,
                            "name": "name",
                            "type": "STRING"
                        },
                        {
                            "required": true,
                            "name": "url",
                            "type": "STRING"
                        }
                    ]
                },
                {
                    "advancedOption": true,
                    "description": "Delimiter to use when reading a csv file.",
                    "label": "Delimiter",
                    "name": "delimiter",
                    "type": "STRING",
                    "defaultValue": ","
                },
                {
                    "advancedOption": true,
                    "description": "The first row of the file contains the header names.",
                    "label": "Header Row",
                    "name": "headerRow",
                    "type": "BOOLEAN",
                    "defaultValue": true
                },
                {
                    "advancedOption": true,
                    "description": "When reading from file the empty cells will be filled with an empty string.",
                    "label": "Include Empty Cells",
                    "name": "includeEmptyCells",
                    "type": "BOOLEAN",
                    "defaultValue": false
                },
                {
                    "advancedOption": true,
                    "description": "The amount of child elements to return in a page.",
                    "label": "Page Size",
                    "name": "pageSize",
                    "type": "INTEGER"
                },
                {
                    "advancedOption": true,
                    "description": "The page number to get.",
                    "label": "Page Number",
                    "name": "pageNumber",
                    "type": "INTEGER"
                },
                {
                    "advancedOption": true,
                    "description": "In some cases and file formats, it is necessary to read data specifically as string, otherwise some special characters are interpreted the wrong way.",
                    "label": "Read As String",
                    "name": "readAsString",
                    "type": "BOOLEAN",
                    "defaultValue": false
                }
            ]
        },
        {
            "display": {
                "description": "Writes the data to a csv file.",
                "label": "Write to file"
            },
            "name": "write",
            "outputSchema": [
                {
                    "type": "OBJECT",
                    "objectType": "FILE_ENTRY",
                    "properties": [
                        {
                            "required": true,
                            "name": "extension",
                            "type": "STRING"
                        },
                        {
                            "required": true,
                            "name": "mimeType",
                            "type": "STRING"
                        },
                        {
                            "required": true,
                            "name": "name",
                            "type": "STRING"
                        },
                        {
                            "required": true,
                            "name": "url",
                            "type": "STRING"
                        }
                    ]
                }
            ],
            "properties": [
                {
                    "description": "The array of objects to write to the file.",
                    "label": "Rows",
                    "required": true,
                    "name": "rows",
                    "type": "ARRAY",
                    "items": [
                        {
                            "type": "OBJECT",
                            "additionalProperties": [
                                {
                                    "type": "ONE_OF",
                                    "types": [
                                        {
                                            "type": "BOOLEAN"
                                        },
                                        {
                                            "type": "DATE_TIME"
                                        },
                                        {
                                            "type": "NUMBER"
                                        },
                                        {
                                            "type": "STRING"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "advancedOption": true,
                    "description": "Filename to set for binary data. By default, \"file.csv\" will be used.",
                    "label": "Filename",
                    "name": "filename",
                    "type": "STRING",
                    "defaultValue": "file.csv"
                }
            ]
        }
    ],
    "display": {
        "description": "Reads and writes data from a csv file.",
        "label": "CSV File"
    },
    "name": "csvFile",
    "version": 1
}
