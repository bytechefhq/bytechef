<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">
    <changeSet id="20250908102801-1" author="Ivica Cardic">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="signing_key" columnName="environment"/>
            </not>
        </preConditions>

        <addColumn tableName="signing_key">
            <column name="environment" type="INT"/>
        </addColumn>
    </changeSet>

    <changeSet id="20250908102801-2" author="Ivica Cardic" context="mono">
        <preConditions onFail="MARK_RAN">
            <uniqueConstraintExists tableName="signing_key" constraintName="signing_key_environment_key"/>
        </preConditions>
        <dropUniqueConstraint tableName="signing_key" constraintName="signing_key_environment_key"/>
    </changeSet>

    <changeSet id="20250908102801-3" author="Ivica Cardic" context="mono">
        <sql>
            UPDATE signing_key
            SET environment = 0
            WHERE environment IS NULL;
        </sql>
    </changeSet>

    <changeSet id="20250908102801-4" author="Ivica Cardic">
        <addNotNullConstraint tableName="signing_key" columnName="environment"/>
    </changeSet>
</databaseChangeLog>
